{
  "manifest_version": 3,
  "name": "French Vocabulary Builder",
  "version": "1.0.0",
  "description": "Learn a new French word every day!",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  }
}